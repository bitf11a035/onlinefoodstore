@{
    ViewBag.Title = "search";
    Layout = "~/Views/Shared/_Layoutdish.cshtml";
}



<form action="/Admin/search2">
<div    align="center">
    Enter ID: <input type="text" name="search" id="search" /> 
         <input type="button" id="b1" value="Check" /><br />
     <input type="submit" id="b2" value="Show Details" /><br />
    </form>


    <div id="result"></div>
    
    <script>

        $(document).ready(function () {


            $('#b1').click(function () {

                var userName = $('#search').val();

                // alert('User Name ='+ userName);
                $('#checking').show();
                $.getJSON("/Admin/search3?Name=" + userName, function (data) {
                    $('#checking').hide();
                    if (data) {
                        $('#result').text("ID is Valid");

                    }
                    else {
                        $('#result').text("ID is invalid");
                    }
                });

            });

        });
    </script>
</div>
